  {% extends 'template.twig' %}



{% block content %}
<title>TEST PROJET</title>
<body>
    <header class="bg-dark" role="header">
        <div class="container">
            <h1 class="text-center text-light"><a href="http://www.chanel.com" onfocus="blur();">CHANEL</a></h1>
        </div>
    </header>
  <section class="container" role="application">
  <div class="row">

            {% for product in products %}
    <div class="col-lg-6">

                    <div class="card">
                        <figure>
                            <img class="card-img-top" src="/img/{{ product.image }}" alt="{{ product.description }}"/>
                        </figure>
                        <div class="card-body">
                            <span>
                                <h1 class="card-title">{{ product.name }}</h1>
                            </span>

                            <p class="card-text">{{ product.description }}</p>

                            <a class="btn btn-primary" href="/products/view/{{ product.id }}" alt={{ product.description }}>
                                View more</a>
                        </div>
                    </div>
    </div>

            {% endfor %}
</div>
    </section>

    {% endblock %}
